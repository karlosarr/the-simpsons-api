{
  "name": "api-serverless",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/dev.ts",
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node --target=node24 --format=cjs ./src/index.ts",
    "zip": "zip -j lambda.zip dist/index.js",
    "update": "aws lambda update-function-code --zip-file fileb://lambda.zip --function-name hello",
    "deploy": "run-s build zip update"
  },
  "devDependencies": {
    "@hono/node-server": "1.19.6",
    "@types/node": "24.10.1",
    "@types/pg": "8.15.6",
    "dotenv": "17.2.3",
    "esbuild": "0.21.4",
    "npm-run-all2": "6.2.0",
    "prisma": "7.1.0",
    "tsx": "4.19.0"
  },
  "dependencies": {
    "@prisma/adapter-pg": "7.1.0",
    "@prisma/client": "7.1.0",
    "hono": "4.10.7",
    "pg": "8.16.3",
    "zod": "4.1.13"
  }
}
