{
  "name": "api",
  "version": "1.0.0",
  "description": "The simpsons api",
  "author": "facundogonzales1550@gmail.com",
  "prefix": "./",
  "type": "module",
  "engines": {
    "node": ">=18.x",
    "npm": ">=9.x"
  },
  "main": "dist/main.js",
  "scripts": {
    "build": "npx prisma generate && npm run build:clean && nest build --path tsconfig.prod.json && tsc-alias -p tsconfig.prod.json",
    "start": "node dist/main.js",
    "dev": "nest start --watch --debug=0.0.0.0:9229",
    "test": "rimraf coverage .nyc_output && concurrently 'npm:test:unit' 'npm:test:e2e' && npm run calculate-global-test-coverage",
    "test:unit": "vitest run --coverage --config vitest.config.unit.ts",
    "test:e2e": "vitest run --coverage --config ./vitest.config.e2e.ts",
    "test:performance": "k6 run tests/performance/contexts/character/get-characters.mjs",
    "calculate-global-test-coverage": "tsx scripts/calculate-global-test-coverage.ts",
    "build:clean": "rimraf dist; exit 0"
  },
  "dependencies": {
    "@fastify/helmet": "^11.1.1",
    "@nestjs/cache-manager": "2.2.2",
    "@nestjs/cli": "10.4.4",
    "@nestjs/common": "10.4.1",
    "@nestjs/config": "3.2.3",
    "@nestjs/core": "10.4.1",
    "@nestjs/platform-fastify": "^10.4.1",
    "@prisma/client": "5.19.1",
    "cache-manager": "5.7.6",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "etag": "1.8.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "9.0.1",
    "@nestjs/schematics": "10.1.4",
    "@nestjs/testing": "10.4.1",
    "@swc/cli": "0.4.0",
    "@swc/core": "1.7.21",
    "@types/etag": "1.8.3",
    "@types/fs-extra": "11.0.4",
    "@types/node": "20.16.2",
    "@types/supertest": "6.0.2",
    "@vitest/coverage-istanbul": "1.3.1",
    "concurrently": "8.2.2",
    "fastify": "4.28.1",
    "fs-extra": "11.2.0",
    "lint-staged": "15.2.9",
    "nock": "13.5.5",
    "nyc": "17.0.0",
    "prisma": "5.19.1",
    "rimraf": "6.0.1",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.19.0",
    "typescript": "5.5.4",
    "unplugin-swc": "1.5.1",
    "vite": "5.4.2",
    "vitest": "1.3.1",
    "vitest-mock-extended": "1.3.1"
  }
}
